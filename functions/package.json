{
  "name": "functions",
  "description": "Firebase Cloud Functions para IA",
  "main": "lib/index.js",
  "engines": {
    "node": "20"
  },
  "dependencies": {
    "@google/genai": "1.8.0",
    "firebase-admin": "^12.0.0",
    "firebase-functions": "^5.0.0"
  },
  "devDependencies": {
    "@types/node": "^20.19.17",
    "typescript": "^5.9.2"
  },
  "private": true,
  "scripts": {
    "build": "tsc",
    "serve": "npm run build && firebase emulators:start --only functions",
    "shell": "npm run build && firebase functions:shell",
    "start": "npm run shell",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log"
  }
}
